# EditorConfig is awesome: http://EditorConfig.org top-most EditorConfig file
root = true

# Defaults
[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{mustache,svg}]
insert_final_newline = false
