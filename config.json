{
  "source": [
    "tokens/**/*.json"
  ],
  "platforms": {
    "scss": {
      "transformGroup": "gravity-scss",
      "buildPath": "dist/scss/",
      "prefix": "grav",
      "files": [
        {
          "destination": "_buildit-colors.scss",
          "format": "scss/variables"
        }
      ]
    },
    
    "css": {
      "transformGroup": "gravity-css",
      "buildPath": "dist/css/",
      "prefix": "--grav",
      "files": [
        {
          "destination": "_buildit-colors.css",
          "format": "scss/variables"
        }
      ]
    }
  }
}
